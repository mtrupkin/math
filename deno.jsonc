{
  "tasks": {
    "build": "deno check mod.ts && deno fmt && deno lint && deno test"
  },
  "lint": {
    "include": ["src/", "mod.ts"],
    "rules": {
      "exclude": [],
      "tags": ["jsr", "recommended"]
    }
  },
  "fmt": {   
    "include": ["src/", "tests/", "mod.ts"]
  },
  "test": {
    "include": ["tests/"]    
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.7"
  }
}
